.slider-controls
  position absolute
  bottom: -8%;
  left 48%
  background-color red

.slider-controls__dots-list
  width 56px
  display flex
  justify-content space-between
  position absolute
  bottom 24px
  left 50%

.slider-controls__dot
  width 8px
  height 8px
  padding 0
  margin 0
  border 1px solid #000000
  border-radius 50%
  opacity .6
  background-color transparent
  box-sizing border-box
  cursor pointer
  transition opacity 0.6s

  &--current
    background-color #000000

  &:hover
    opacity 1