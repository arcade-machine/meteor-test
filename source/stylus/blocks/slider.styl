.slider
  width 100%
  min-height 290px
  padding 0
  margin 0
  position relative
  list-style none

.slider__item
  position: absolute
  left: 0
  top: 0
  opacity: 0
  z-index: 1
  display flex
  align-items center
  justify-content center
  transition: opacity 0.6s

  &:nth-child(2)
    transform: scaleX(-1);

  &:nth-child(3)
    transform rotate(180deg)

  &--current
    opacity: 1
    z-index: 2

.slider__image
  width 100%
  height auto